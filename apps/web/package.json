{
  "name": "@gnc/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --strictPort --port 5173",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:e2e": "pnpm build && start-server-and-test preview http://localhost:5173 'playwright test'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:cypress": "pnpm build && start-server-and-test preview http://localhost:5173 'cypress run --browser chrome'",
    "test:cypress:headless": "pnpm build && start-server-and-test preview http://localhost:5173 'cypress run --browser chrome --headless'",
    "test:cypress:headed": "pnpm build && start-server-and-test preview http://localhost:5173 'cypress run --headed --browser chrome'",
    "test:cypress:open": "start-server-and-test preview http://localhost:5173 'cypress open'",
    "lighthouse": "lhci autorun --config=../../lighthouserc.json",
    "lighthouse:local": "lighthouse http://localhost:5173 --view --output html --output-path ./lighthouse-report.html"
  },
  "dependencies": {
    "@gnc/core": "workspace:*",
    "@gnc/scenarios": "workspace:*",
    "@gnc/ui": "workspace:*",
    "@react-three/drei": "^9.121.5",
    "@react-three/fiber": "^8.17.10",
    "@react-three/postprocessing": "^2.19.1",
    "plotly.js-dist-min": "^2.35.3",
    "postprocessing": "^6.37.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.169.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@tailwindcss/vite": "^4.1.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.170.0",
    "@vitejs/plugin-react": "^4.3.4",
    "cypress": "^13.13.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "lighthouse": "^12.0.0",
    "@lhci/cli": "^0.13.0",
    "start-server-and-test": "^2.0.3",
    "wait-on": "^7.0.1",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.5"
  }
}
