{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@gnc/core": ["packages/gnc-core/src"],
      "@gnc/ui": ["packages/ui-components/src"],
      "@gnc/scenarios": ["packages/mission-scenarios/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
