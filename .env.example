# ==========================================
# Universal Docker Development Environment
# Template Configuration File
# ==========================================

# ==========================================
# Node.js Configuration
# ==========================================
NODE_ENV=development
VITE_HOST=0.0.0.0
VITE_PORT=5173

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_HOST=database
POSTGRES_PORT=5432
POSTGRES_DB=gnc_space_sim
POSTGRES_USER=gnc_dev
POSTGRES_PASSWORD=gnc_password_123
DATABASE_URL=postgresql://gnc_dev:gnc_password_123@database:5432/gnc_space_sim

# ==========================================
# Redis Cache Configuration
# ==========================================
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://cache:6379

# ==========================================
# API Configuration
# ==========================================
API_HOST=0.0.0.0
API_PORT=3000
API_BASE_URL=http://localhost:3000

# ==========================================
# Security Configuration
# ==========================================
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
API_KEY=your-api-key-change-in-production
CORS_ORIGIN=http://localhost:5173

# ==========================================
# Monitoring Configuration
# ==========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=gnc_admin_123
PROMETHEUS_HOST=monitoring
PROMETHEUS_PORT=9090

# ==========================================
# File Upload Configuration
# ==========================================
UPLOAD_MAX_SIZE=10mb
UPLOAD_DIR=/workspace/uploads

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@gnc-space-sim.com

# ==========================================
# External APIs (Optional)
# ==========================================
NASA_API_KEY=
WEATHER_API_KEY=
MAPS_API_KEY=

# ==========================================
# Feature Flags
# ==========================================
ENABLE_METRICS=true
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# ==========================================
# Performance Configuration
# ==========================================
MEMORY_LIMIT=2048
MAX_WORKERS=4
CACHE_TTL=3600

# ==========================================
# Development Tools
# ==========================================
ENABLE_DEBUGGER=true
ENABLE_PROFILER=false
LOG_LEVEL=debug
DEBUG_NAMESPACE=gnc:*

# ==========================================
# Docker Configuration
# ==========================================
COMPOSE_PROJECT_NAME=gnc-space-sim
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
